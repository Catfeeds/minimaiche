page {
  font-size: 30rpx;
  font-family: "微软雅黑";
}
.tab_big image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.tab_big {
  display:flex;
  align-items: center;
  justify-content: center;
  width: 33.3%;
  border-right: 1px solid #333;
  line-height: 0;
}
.seek_tab {
  display: flex;
  padding: 10rpx 0;
  z-index: 999;
}
.seek_tab > view:last-child {
  border-right: 0;
}
.active {
  color: #029cdc;
}
.seek_img {
  width: 100%;
  height: 300rpx;
  border-bottom: 10rpx solid #eee;
}
.seek_img image {
  width: 100%;
  height: 100%;
}
.seek_input input {
   margin-left: 20rpx;
}
.seek_input {
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 10rpx;
  width:100%;
}
.seek_sousuo {
  position: relative;
  width: 100%; 
}
.input_big {
  padding-left:30%;
  background: rgba(0, 0, 0, .2);
  border-radius: 15rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}
.seek_title {
  font-weight: 700;
  color: #029cdc;
  border-bottom: 2px solid #029cdc;
  padding: 10rpx 20rpx;
  font-size: 31rpx;
}
.content_img image {
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
}
.content_img {
  width: 32%;
  height: 138rpx;
  margin-right: 18rpx;
}
.content_big {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  width: 100%;
  display:flex;
}
.content_title {
  font-size: 27rpx;
}
.content_text {
  font-size: 24rpx;
  color: #666;
}
.content_middle {
  font-size: 21rpx;
  color: #999;
}
.content_shoufu {
  color: #f8a300;
  font-weight: 700;
  font-size: 28rpx;
}
.content_bottom {
  display: flex;
  justify-content:space-between;
  align-items: flex-end;
}
.content_bottom button {
  font-size: 19rpx;
  padding:0 10rpx;
  background: #f09300;
  color: #fff;
  border: none;
}
.content_right {
  width: 65%;
}
.lis_img image {
  width: 100%;
  height: 100%;
}
.lis_img  {
  width: 40rpx;
  height: 40rpx;
}
.lis_big {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 50rpx 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.seek_lis {
  position: absolute;
  top: 50rpx;
  z-index: 33;
  width: 100%;
  border-top: 1px solid #ccc;
}
.brand_big {
  width:33%;
  padding: 20rpx 30rpx ;
  box-sizing: border-box;
}
.brand_content {
  display: flex;
  flex-wrap: wrap;
}
.brand_left {
  width: 100%;
  background: #f6f6f6;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}
.brandActvie {
  background: #b3aac5;
}
.lis_content {
  background: #fff;
  z-index: 22;
}
.slidown {
  animation: slidown .4s ease-in both; 
}
.slidup {
  animation: slidup .4s ease-in both; 
}
@keyframes slidown{
  from{
      transform:  translateY(-100%);
  }
  to{
      transform:  translateY(0%);
  }
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.fullbg{
    position: absolute;
    top:50rpx;
    z-index: 20;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    opacity: 0;
}
.fullopacity{
    opacity: .5;
}