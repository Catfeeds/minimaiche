.swiper {
  height: 390rpx;
}
.hot_information {
  display: flex;
  flex-wrap:wrap;
  padding:  20rpx;
}
.hot_message > view {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  font-size: 20rpx;
  padding: 0 15rpx;
}
.hot_message image {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  border: 1px solid #D5D5D5;
}
.hot_message {
  width: 25%;
  font-size: 26rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}
page {
  font-size: 28rpx;
  font-family: "微软雅黑";
}
.index_title {
  font-size: 80rpx;
  text-align: center;
  /* border-bottom: 1px solid #D9D9D9; */
  padding-bottom: 20rpx;
}
.commodity_content > view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.commodity_big {
  width: 50%;
  padding: 50rpx 50rpx 20rpx 50rpx;
  box-sizing: border-box;
  border-top: 1px solid #D9D9D9;
}
.commodity_top {
  font-size: 33rpx;
  font-weight: 600;
  border-bottom: 1px solid #323033;
}
.commodity_period {
  font-size: 31rpx;
  font-weight: 600;
  border-bottom: 1px solid #323033;
}
.commodity_presentation {
  background: #FFDB00;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  margin-top: 8rpx;
  font-size: 26rpx;
  text-align: center;
  height:76rpx;

}
.commodity_img image {
  width: 100%;
  height: 170rpx;
}
.index_commodity {
  display: flex;flex-wrap:wrap;
}
.index_bottom_img {
  width: 100%;
}